<%- include("_header") -%>

<h1
  style="
    text-align: center;
    padding: 2rem;
    font-weight: 400;
    letter-spacing: 2px;
  ">
  Create Recipe
</h1>
<form action="/recipes/create" method="POST" style="text-align: center">
  <div>
    <%- include("_editor") -%>
    <div>
      <div
        style="
          font-size: 18px;
          letter-spacing: 1px;
          position: absolute;
          top: 30rem;
          left: 55rem;
        ">
        <input
          style="
            padding-right: 30px;
            padding-left: 30px;
            padding-top: 15px;
            padding-bottom: 15px;
            font-size: 12px;
            border: none;
            background-color: rgb(215, 215, 215);
          "
          type="submit"
          value="Create Recipe"
          required />
      </div>
    </div>
  </div>
  <a
    type="submit"
    style="
      padding-right: 30px;
      padding-left: 30px;
      padding-top: 15px;
      padding-bottom: 15px;
      font-size: 12px;
      letter-spacing: 1px;
      position: absolute;
      top: 30rem;
      left: 64rem;
      text-decoration: none;
      border: none;
      background-color: rgb(215, 215, 215);
    "
    href="/"
    >Cancel</a
  >
</form>

<%- include("_footer") -%>
