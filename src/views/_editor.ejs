<div class="form-group">
  <label
    style="
      font-size: 18px;
      letter-spacing: 1px;
      position: absolute;
      top: 9rem;
      left: 20rem;
    "
    for="recipe"
    >Recipe</label
  >
  <div style="padding: 0.5rem">
    <input
      style="width: 50rem; height: 1.5rem; font-size: 18px"
      autofocus
      class="form-control"
      name="recipe"
      value="<%= model.recipe %>"
      required />
  </div>
</div>

<div>
  <label
    style="
      font-size: 18px;
      letter-spacing: 1px;
      position: absolute;
      top: 13rem;
      left: 20rem;
    "
    for="ingredients"
    >Ingredients</label
  >
  <div style="padding: 2rem">
    <input
      style="width: 50rem; height: 1.5rem; font-size: 18px"
      class="form-control"
      name="ingredients"
      value="<%= model.ingredients %>"
      required />
  </div>
</div>

<div class="form-group" style="padding: 0.5rem">
  <label
    style="
      font-size: 18px;
      letter-spacing: 1px;
      position: absolute;
      top: 17rem;
      left: 20rem;
    "
    for="preparation"
    >Preparation</label
  >
  <div>
    <textarea
      required
      style="width: 50rem; height: 10rem; font-size: 22px"
      class="form-control"
      cols="20"
      name="preparation"
      maxlength="50000"
      rows="7">
<%= model.preparation %> </textarea
    >
  </div>
  <div>
    <input
      type="image"
      name="image"
      value="<%= model.image %>"
      style="
        font-size: 12px;
        letter-spacing: 1px;
        position: absolute;
        top: 30rem;
        left: 20rem;
      " />
  </div>
</div>
